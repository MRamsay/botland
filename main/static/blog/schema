CREATE TABLE POSTS (
	id INT GENERATED ALWAYS AS IDENTITY,
	title VARCHAR(255),
	post_date DATE,
	modified_date DATE,
	thumbnail_file VARCHAR(255),
	summary_file VARCHAR(255),
	post_file VARCHAR(255)
);

CREATE TABLE TAGS (
	id INT GENERATED ALWAYS AS IDENTITY,
	tag_name VARCHAR(255),
	
);

ALTER TABLE TAGS ADD PRIMARY KEY (id);
ALTER TABLE POSTS ADD PRIMARY KEY (id)

CREATE TABLE POST_TAGS (
	CONSTRAINT post FOREIGN KEY(id) REFERENCES POSTS(id),
	CONSTRAINT tag FOREIGN KEY(id) REFERENCES TAGS(id)
);

